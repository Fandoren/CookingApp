<Page x:Class="CookingApp.View.MainPages.SignUpPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CookingApp.View.MainPages"
      mc:Ignorable="d" 
      d:DesignHeight="350" d:DesignWidth="500"
      Title="SignUpPage">

    <Grid Style="{StaticResource DefaultGrid}">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Style="{StaticResource DefaultBigTextBlock}" Text="Sign Up" HorizontalAlignment="Center"/>
        <StackPanel Margin="0, 10" Grid.Row="1">
            <TextBox Style="{StaticResource DefaultTextBoxPlaceHolder}" Width="210" Text="Имя" Margin="0, 20, 0 10"/>
            <TextBox Style="{StaticResource DefaultTextBoxPlaceHolder}" Width="210" Text="Логин"/>
            <TextBox Style="{StaticResource DefaultTextBoxPlaceHolder}" Width="210" Text="Почта"/>
            <TextBox Style="{StaticResource DefaultTextBoxPlaceHolder}" Width="210" Text="Пароль"/>
            <TextBox Style="{StaticResource DefaultTextBoxPlaceHolder}" Width="210" Text="Подтверждение пароля"/>
        </StackPanel>
    </Grid>
</Page>
